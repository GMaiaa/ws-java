package manha1;

import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		Scanner leitor = new Scanner(System.in);
		
		//imprime(leitor.next());
		
		System.out.printf("Informe a quantidade de pessoas...: ");
		int quantidadeDePessoas = leitor.nextInt();
		
		System.out.printf("Informe o valor da conta...: ");
		double valor = leitor.nextDouble();
		
		double valorPorPessoa = valor / quantidadeDePessoas;
		
		System.out.printf("O valor por pessoa é: %.2f", valorPorPessoa);
		
	}
	
	public static String retornaMeuNome(){
		// String nome (definição) Tipo nomeDaVariavel
        // = "Gleyser" (inicialização)
        // tipos primitivos: int, double, float, boolean
        String nomeDeRetorno = "Gabriel";
        return nomeDeRetorno;
	}
	
	
}

